                    &lt;/label&gt;
                    &lt;div class="menu-body"&gt;
                        &lt;ul class="menu-list"&gt;
                            &lt;li&gt;Classic&lt;/li&gt;
                            &lt;li&gt;Taro&lt;/li&gt;
                            &lt;li&gt;Jasmine&lt;/li&gt;
                        &lt;/ul&gt;
                    &lt;/div&gt;
                &lt;/div&gt;
            &lt;/li&gt;

            &lt;li&gt;Cold Brew&lt;/li&gt;
