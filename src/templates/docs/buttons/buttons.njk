<div class="row">
    <div class="col xs-12">
        <h1 class="header">Buttons</h1>
        <h5 class="subheader thin no-margin">Buttons come in all of <a href="./colors.html">boba's colors</a>.</h5>                        
    </div>
    <div class="col xs-12 md-6 col-middle">
        <div>
            <button class="mv-1">Default</button>
            <br />
            {% for color in global_color_list_core %}
            <button class="{{ color }} mv-1">{{ color | capitalize }}</button>
            {% endfor %}
        </div>
    </div>
    <div class="col xs-12 md-6 col-middle">
        <div class="code-block">
            <pre class="code"><code class="language-html">&lt;button class="green"&gt; Green &lt;/button&gt;</code></pre>
        </div>
    </div>
</div>