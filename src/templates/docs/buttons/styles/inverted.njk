<div class="row">
    <div class="col xs-12">
        <h4 class="header">Inverted</h4>
        <h6 class="subheader thin no-margin">The color of your button will appear on hover or click</h6>
    </div>
    <div class="col xs-12 md-6 col-middle">
        <div>
            <button class="inverted">Default</button>
            <br />
            {% for color in global_color_list_core %}
            <button class="{{ color }} inverted">{{ color | capitalize }}</button>
            {% endfor %}
        </div>
    </div>
    <div class="col xs-12 md-6 col-middle">
        <div class="code-block">
            <pre class="code"><code data-lang="html">&ltbutton class="green inverted"&gt Green &lt/button&gt</code></pre>
        </div>
    </div>
</div>